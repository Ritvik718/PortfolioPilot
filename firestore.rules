rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Transactions Collection Rules
    match /transactions/{transactionId} {
      // A user can read a transaction if they are authenticated and the transaction belongs to them.
      // This is separated into `get` for single doc reads and `list` for queries.
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;

      // A user can create a transaction if they are authenticated and the new transaction's
      // userId matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // A user can update or delete a transaction if they own it.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users Collection Rules
    match /users/{userId} {
      // A user can only read or write to their own user document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
