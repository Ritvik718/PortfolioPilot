{
  "rules": {
    "users": {
      "$uid": {
        "//": "Users can only read and write to their own document.",
        ".read, .write": "request.auth.uid == $uid"
      }
    },
    "transactions": {
      "//": "Allow users to query the collection if they are authenticated.",
      ".read": "request.auth != null",
      "//": "Allow users to create documents in the transactions collection.",
      ".create": "request.auth != null",
      "$transactionId": {
      	"//": "Users can only get, update, or delete their own transactions.",
        ".get, .update, .delete": "request.auth.uid == resource.data.userId"
      }
    }
  }
}
